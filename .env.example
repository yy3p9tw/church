# 教會網站環境配置檔案範本
# 複製為 .env 檔案並修改對應值

# ===========================================
# 應用程式基本設定
# ===========================================
APP_NAME=基督教會
APP_ENV=production
APP_DEBUG=false
APP_URL=https://your-domain.com
APP_KEY=base64:請生成新的APP_KEY

# ===========================================
# 資料庫設定（請選擇一種配置）
# ===========================================

# 選項1: 本地開發環境
DB_HOST=localhost
DB_NAME=church_db
DB_USER=root
DB_PASS=

# 選項2: InfinityFree 主機
# DB_HOST=sqlXXX.infinityfree.com
# DB_NAME=epizXXXXX_church
# DB_USER=epizXXXXX_user
# DB_PASS=your_database_password

# 選項3: Koyeb 雲端服務
# DB_CONNECTION=array
# DB_DATABASE=

# ===========================================
# 網站設定
# ===========================================
SITE_NAME=基督教會
SITE_URL=https://your-domain.com

# ===========================================
# 管理員設定（請修改預設密碼）
# ===========================================
ADMIN_EMAIL=admin@church.com
ADMIN_PASSWORD=請設定強密碼

# ===========================================
# 檔案上傳設定
# ===========================================
MAX_UPLOAD_SIZE=50M
UPLOAD_PATH=public/uploads/
UPLOAD_MAX_SIZE=5242880

# ===========================================
# 安全設定
# ===========================================
SESSION_LIFETIME=120
SECURE_COOKIES=true

# ===========================================
# 日誌和除錯設定
# ===========================================
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error
DISPLAY_ERRORS=false
LOG_ERRORS=true
DEBUG=false

# ===========================================
# 快取和會話設定
# ===========================================
BROADCAST_DRIVER=log
CACHE_DRIVER=array
FILESYSTEM_DISK=local
QUEUE_CONNECTION=sync
SESSION_DRIVER=array

# ===========================================
# 郵件設定
# ===========================================
MAIL_MAILER=smtp
MAIL_HOST=mailpit
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="hello@church.com"
MAIL_FROM_NAME="${APP_NAME}"
